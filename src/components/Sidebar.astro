---
import { getPosts } from "../sanity/api";

const posts = await getPosts();
const reversedPosts = posts.reverse();
---
<div class="sidebar is-hidden-mobile">
	<ul>
  {
    reversedPosts.map((post: { publishedAt: string; numbering: string; title: string }) => (
      <li class="sidebar-items"><a href={"#" + post.publishedAt}><span>{post.numbering}</span><br>{post.title}
      </a></li>
    ))
  }
	</ul>
</div>

<style lang="scss">
  @use "../../node_modules/bulma/sass/utilities/mixins";
	.sidebar{
		width: 300px;
		min-width: 300px;
		@include mixins.tablet-only{
			width: 250px;
			min-width: 250px;
		}
		@include mixins.fullhd{
			width: 400px;
			min-width: 400px;
		}
		@include mixins.from(2000px){
			width: 500px;
			min-width: 500px;
		}
	}
  ul{
    list-style: none;
		position: fixed;
		top: 0;
		left: 0;
		height: 100vh;
		width: 300px;
		top: 50%;
		transform: translateY(-50%);
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 100px 32px;
		@include mixins.tablet-only{
			width: 250px;
		}
		@include mixins.fullhd{
			width: 400px;
		}
		@include mixins.from(2000px){
			width: 500px;
			min-width: 500px;
		}
  }
	a{
		text-decoration: none;
		position: relative;
		color: var(--main);
		display: block;
		padding: 0.25rem 0.25rem;
		&:hover{
			text-decoration: underline;
			text-decoration-thickness: 1px;
			text-decoration-skip-ink: none;
			text-underline-offset: 2px;
		}
	}
	.sidebar-items{
		line-height: 1.3;
		border: 1px solid rgba(0,0,0,0);
		&:hover{
			border: 1px solid var(--main);
		}
		span{
			font-size: 0.9rem;
		}
	}
</style>
